{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./",
    "paths": {
      "@components/*": ["./src/components/*"],
      "@styles/*": ["./src/styles/*"],
      "@redux/*": ["./src/redux/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@screens/*": ["./src/screens/*"],
      "@interfaces": ["./src/interfaces"],
      "@routes": ["./src/routes"],
      "@types": ["./src/types"],
      "@utils/*": ["./src/utils/*"],
    }
  }
}
